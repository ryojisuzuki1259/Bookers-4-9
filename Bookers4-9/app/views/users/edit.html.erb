<h2>User info</h2>

<%= form_with model:@user, local:true do |user| %>

  <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>error prohibited this obj from being saved: </h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <table>
    <tr>
      <th>
        <div class="field">
          <label>Name</label>
          <%= user.text_field :name, autofocus: true, placeholder:"名前"%>
        </div>
      </th>
    </tr>
    <tr>
      <th>
        <div class="field">
          <label>Image</label>
          <%= user.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>
      </th>
    </tr>
    <tr>
      <th>
        <div class="field">
          <label>Introduction</label>
          <%= user.text_field :introduction %>
        </div>
      </th>
    </tr>
    <tr>
      <th>
        <%= user.submit "Update User" %>
      </th>
    </tr>
  </table>
<% end %>
