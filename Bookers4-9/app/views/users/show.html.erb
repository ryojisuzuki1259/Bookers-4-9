<%= render 'homes/list', book: @new, user: @user %>

<div class='col-xs-9'>
  <h2>Books</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback:'no-image-icon.jpg'), user_path(@user) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tbody>
      <% end %>
    </table>
</div>